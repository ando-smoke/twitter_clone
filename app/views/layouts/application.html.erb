<!DOCTYPE html>
<html>
<head>
  <title>Twitter Clone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container'>

    <div id='flash'>
      <% if notice.present? %>
        <%= render 'notices' %>
      <% end %>
    </div>

    <%= yield %>
  </div>
</body>
</html>
